@model IEnumerable<Micro_Ondas.Models.Tipos>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
	<div class="form-horizontal text-center">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.ActionLink("Consultar alimentos cadastrados", "Index", "Alimentos", "", new { @class = "btn btn-info btn-lg" })
		</div>

		@foreach (var item in Model)
		{
			@Html.Hidden("tempoH" + item.Nome, item.Tempo)
			@Html.Hidden("potenciaH" + item.Nome, item.Potencia)
		}

		<div class="form-group ">
			<div class="col-lg-offset-4 col-md-4 ">
				<select class="custom-select form-control" onchange="propriedades(this.value)" id="Nome" name="Nome">
					<option selected value="">Tipo do alimento</option>
					@foreach (var item in Model)
					{
						<option value="@item.Nome">@item.Nome</option>
					}
				</select>
				@Html.ValidationMessage("inserirNome", new { @class = "text-danger" })
			</div>
		</div>
		

		<div class="form-group">
			<label for="Tempo" class="control-label col-md-4">Tempo: </label>
			<div class="col-md-4">
				<input type="text" id="Tempo" class="form-control" readonly />
			</div>
		</div>

		<div class="form-group">
			<label for="Potencia" class="control-label col-md-4">Potência: </label>
			<div class="col-md-4">
				<input type="text" id="Potencia" class="form-control" readonly />
			</div>
		</div>

		<div class="form-group">
			<input type="submit" value="Aquecer" class="btn btn-success" />
		</div>

	</div>
}

<div class="form-group text-center">
	@Html.ActionLink("Início rápido", "AquecerR", "Home", new { @class = "btn btn-primary", onclick = "mostrarR();" })
</div>
