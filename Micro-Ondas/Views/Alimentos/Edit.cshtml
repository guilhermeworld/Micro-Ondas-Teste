				@Html.ValidationMessageFor(model => model.Instruções, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Tempo, htmlAttributes: new { @class = "control-label col-md-4" })
			<div class="col-md-4">
				@Html.TextBoxFor(model => model.Tempo, new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.Tempo, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Potencia, htmlAttributes: new { @class = "control-label col-md-4" })
