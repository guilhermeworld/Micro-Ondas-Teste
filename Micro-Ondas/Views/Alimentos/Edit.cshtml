				@Html.EditorFor(model => model.Caracter, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Caracter, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="text-center">
				<input type="submit" value="Confirmar edição" class="btn btn-success btn-lg" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Cancelar", "Index", "", new { @class = "btn btn-danger btn-lg" })
</div>