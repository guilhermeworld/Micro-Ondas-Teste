@model Micro_Ondas.Models.Tipos

@{
	ViewBag.Title = "Delete";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-striped table-responsive text-center">
	<tr>
		<th class="text-center">
			Nome
		</th>
		<th class="text-center">
			Tempo
		</th>
		<th class="text-center">
			Potência
		</th>
	</tr>

	<tr>
		<td>
			@Html.DisplayFor(model => model.Nome)
		</td>
		<td>
			@Html.DisplayFor(model => model.Tempo)
		</td>
		<td>
			@Html.DisplayFor(model => model.Potencia)
		</td>
	</tr>

</table>



@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-actions text-center">
		<input type="submit" value="Confirmar" class="btn btn-danger btn-lg" />
		@Html.ActionLink("Cancelar", "Index", "", new { @class = "btn btn-lg btn-warning" })
	</div>
}