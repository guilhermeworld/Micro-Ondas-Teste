@model IEnumerable<Micro_Ondas.Models.Tipos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
	@Html.ActionLink("Cadastrar novo alimento", "Create", "", new { @class = "btn btn-success" })
	@Html.ActionLink("Voltar", "Index","Home", "", new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-responsive text-center">
	<tr>
		<th class="text-center">Nome</th>
		<th class="text-center">Tempo</th>
		<th class="text-center">Potência</th>
		<th class="text-center"></th>
	</tr>

@foreach (var item in Model) {
	<tr>
		<td>@Html.DisplayFor(modelItem => item.Nome)</td>
		<td>@Html.DisplayFor(modelItem => item.Tempo)</td>
		<td>@Html.DisplayFor(modelItem => item.Potencia)</td>

		<td>
			@if (item.ID == 1 || item.ID == 2 || item.ID == 3 || item.ID == 4 || item.ID == 5)
			{
				@Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "btn btn-primary", disabled = "" })
				@Html.ActionLink("Excluir", "Delete", new { id = item.ID }, new { @class = "btn btn-danger", disabled = "" })
			}
			else
			{
				@Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "btn btn-primary" }) 
				@Html.ActionLink("Excluir", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
			}
			@Html.ActionLink("Detalhes", "Details", new { id = item.ID }, new { @class = "btn btn-info" })
			

		</td>
	</tr>
}

</table>
